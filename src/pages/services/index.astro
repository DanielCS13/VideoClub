---
import Layout from "../../layout/Layout.astro";
import axios from "axios";


	const response = await axios.get("http://localhost:3000/services");
	const services = response.data;
---

<Layout navActive={3} title="Astro | Servicio" >
	<div class="pt-20 mx-auto max-w-screen-lg" >
    <h1 class="text-3xl font-semibold" >Servicios</h1>
    <a href="/services/create" class="bg-orange-500 text-white p-2 rounded-full my-4 inline-flex" >Crear servicio</a>
    <h3 class="text-xl font-semibold" >Lista de servicios</h3>
    <ul>
        {
            services.map((service) => (
                <li>
                    <a href={`services/${service.id}`}>{service.titulo}</a>
                </li>
            ))
        }
    </ul>
    </div>
</Layout>
